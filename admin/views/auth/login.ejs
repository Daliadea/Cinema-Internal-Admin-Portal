<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - CineVillage Admin Portal</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><rect width=%22100%22 height=%22100%22 fill=%22%231a1a2e%22/><text x=%2250%22 y=%2265%22 font-size=%2250%22 fill=%22%23e94560%22 text-anchor=%22middle%22 font-family=%22sans-serif%22>C</text></svg>">
</head>
<body>
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <h1 class="gradient-text">CineVillage</h1>
        <p>Cinema Internal Admin Portal</p>
      </div>

      <% if (error) { %>
        <div class="alert alert-danger">
          <span><%= error %></span>
        </div>
      <% } %>

      <form action="/auth/login" method="POST" id="loginForm">
        <div class="form-group">
          <label for="username">Username</label>
          <input 
            type="text" 
            id="username" 
            name="username" 
            class="form-control" 
            placeholder="Enter your username"
            required
            autofocus
          >
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            class="form-control" 
            placeholder="Enter your password"
            required
          >
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100%; font-size: 1.05rem; padding: 1rem;">
          Login to Portal
        </button>
      </form>

      <div class="auth-links">
        Don't have an account? <a href="/auth/register">Create one now â†’</a>
      </div>
    </div>
  </div>

  <script>
    // Add enter key support
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('loginForm');
      const inputs = form.querySelectorAll('input');
      
      inputs.forEach((input, index) => {
        input.addEventListener('keypress', function(e) {
          if (e.key === 'Enter' && index < inputs.length - 1) {
            e.preventDefault();
            inputs[index + 1].focus();
          }
        });
      });
    });
  </script>
</body>
</html>
