<%- include('../partials/header', { title: 'Screenings' }) %>

<div class="container" id="main-content">
  <%- include('../partials/success', { success: typeof success !== 'undefined' ? success : null }) %>
  <div class="page-header">
    <div>
      <h1>Screenings Management</h1>
      <p style="color: var(--light-text); font-size: 1rem; margin-top: 0.5rem;">Schedule and manage movie screenings</p>
    </div>
    <a href="/admin/screenings/new" class="btn btn-primary">Schedule New Screening</a>
  </div>

  <!-- Screening Stats Summary -->
  <% 
    const now = new Date();
    const upcomingCount = screenings.filter(s => new Date(s.startTime) > now).length;
    const pastCount = screenings.filter(s => new Date(s.endTime) < now).length;
    const ongoingCount = screenings.filter(s => new Date(s.startTime) <= now && new Date(s.endTime) >= now).length;
  %>
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 1rem; margin-bottom: 2rem;">
    <div style="background: linear-gradient(135deg, #00d9a3 0%, #00b894 100%); color: white; padding: 1.5rem; border-radius: 12px; text-align: center; box-shadow: var(--shadow);">
      <div style="font-size: 0.8rem; opacity: 0.9; text-transform: uppercase; margin-bottom: 0.5rem;">Upcoming</div>
      <div style="font-size: 2.5rem; font-weight: 800;"><%= upcomingCount %></div>
    </div>
    <div style="background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-light) 100%); color: white; padding: 1.5rem; border-radius: 12px; text-align: center; box-shadow: var(--shadow);">
      <div style="font-size: 0.8rem; opacity: 0.9; text-transform: uppercase; margin-bottom: 0.5rem;">Ongoing</div>
      <div style="font-size: 2.5rem; font-weight: 800;"><%= ongoingCount %></div>
    </div>
    <div style="background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%); color: white; padding: 1.5rem; border-radius: 12px; text-align: center; box-shadow: var(--shadow);">
      <div style="font-size: 0.8rem; opacity: 0.9; text-transform: uppercase; margin-bottom: 0.5rem;">Past</div>
      <div style="font-size: 2.5rem; font-weight: 800;"><%= pastCount %></div>
    </div>
    <div style="background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%); color: white; padding: 1.5rem; border-radius: 12px; text-align: center; box-shadow: var(--shadow);">
      <div style="font-size: 0.8rem; opacity: 0.9; text-transform: uppercase; margin-bottom: 0.5rem;">Total</div>
      <div style="font-size: 2.5rem; font-weight: 800;"><%= screenings.length %></div>
    </div>
  </div>

  <!-- Filters -->
  <div class="card" style="margin-bottom: 1.5rem;">
    <div class="card-header">
      <h2 style="margin: 0; font-size: 1.1rem;">Filters</h2>
    </div>
    <div class="card-body">
      <form method="GET" action="/admin/screenings" class="filter-form" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); gap: 1rem; align-items: end;">
        <div>
          <label for="dateFrom" style="display: block; font-size: 0.85rem; margin-bottom: 0.35rem; color: var(--light-text);">From Date</label>
          <div class="date-input-wrapper">
            <input type="date" id="dateFrom" name="dateFrom" value="<%= typeof filters !== 'undefined' && filters.dateFrom ? filters.dateFrom : '' %>" class="form-control">
          </div>
        </div>
        <div>
          <label for="dateTo" style="display: block; font-size: 0.85rem; margin-bottom: 0.35rem; color: var(--light-text);">To Date</label>
          <div class="date-input-wrapper">
            <input type="date" id="dateTo" name="dateTo" value="<%= typeof filters !== 'undefined' && filters.dateTo ? filters.dateTo : '' %>" class="form-control">
          </div>
        </div>
        <div>
          <label for="movieId" style="display: block; font-size: 0.85rem; margin-bottom: 0.35rem; color: var(--light-text);">Movie</label>
          <select id="movieId" name="movieId" class="form-control" style="width: 100%; padding: 0.5rem;">
            <option value="">All Movies</option>
            <% if (typeof movies !== 'undefined') { movies.forEach(m => { %>
              <option value="<%= m._id %>" <%= typeof filters !== 'undefined' && filters.movieId === m._id.toString() ? 'selected' : '' %>><%= m.title %></option>
            <% }); } %>
          </select>
        </div>
        <div>
          <label for="hallId" style="display: block; font-size: 0.85rem; margin-bottom: 0.35rem; color: var(--light-text);">Hall</label>
          <select id="hallId" name="hallId" class="form-control" style="width: 100%; padding: 0.5rem;">
            <option value="">All Halls</option>
            <% if (typeof halls !== 'undefined') { halls.forEach(h => { %>
              <option value="<%= h._id %>" <%= typeof filters !== 'undefined' && filters.hallId === h._id.toString() ? 'selected' : '' %>><%= h.name %></option>
            <% }); } %>
          </select>
        </div>
        <div>
          <label for="status" style="display: block; font-size: 0.85rem; margin-bottom: 0.35rem; color: var(--light-text);">Status</label>
          <select id="status" name="status" class="form-control" style="width: 100%; padding: 0.5rem;">
            <option value="">All</option>
            <option value="upcoming" <%= typeof filters !== 'undefined' && filters.status === 'upcoming' ? 'selected' : '' %>>Upcoming</option>
            <option value="ongoing" <%= typeof filters !== 'undefined' && filters.status === 'ongoing' ? 'selected' : '' %>>Ongoing</option>
            <option value="past" <%= typeof filters !== 'undefined' && filters.status === 'past' ? 'selected' : '' %>>Past</option>
          </select>
        </div>
        <div style="display: flex; gap: 0.5rem;">
          <button type="submit" class="btn btn-primary">Apply</button>
          <a href="/admin/screenings" class="btn btn-secondary">Clear</a>
        </div>
      </form>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h2>All Screenings</h2>
      <div style="display: flex; align-items: center; gap: 1rem;">
        <span class="badge badge-info"><%= screenings.length %> screenings</span>
        <% if (screenings.length > 0) { %>
          <button onclick="exportTableToCSV('screenings-export.csv')" class="btn btn-sm btn-export">Export</button>
        <% } %>
      </div>
    </div>
    <div class="card-body">
      <% if (screenings.length === 0) { %>
        <div class="empty-state">
          <h3>No screenings scheduled</h3>
          <p>Start scheduling movie screenings for your cinema halls!</p>
          <a href="/admin/screenings/new" class="btn btn-primary">Schedule Your First Screening</a>
        </div>
      <% } else { %>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>Movie</th>
                <th>Hall</th>
                <th>Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Duration</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% screenings.forEach(screening => { 
                const screeningStart = new Date(screening.startTime);
                const screeningEnd = new Date(screening.endTime);
                const isPast = screeningEnd < now;
                const isOngoing = screeningStart <= now && screeningEnd >= now;
              %>
                <tr style="<%= isPast ? 'opacity: 0.6;' : '' %>">
                  <td>
                    <strong style="font-size: 1.05rem; color: var(--primary-color);"><%= screening.movie.title %></strong>
                    <% if (isOngoing) { %>
                      <span class="badge badge-success" style="margin-left: 0.5rem;">LIVE</span>
                    <% } %>
                  </td>
                  <td><span class="badge badge-secondary"><%= screening.hall.name %></span></td>
                  <td style="color: var(--dark-text);"><%= screeningStart.toLocaleDateString('en-CA') %></td>
                  <td><strong style="color: var(--accent-color);"><%= screeningStart.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %></strong></td>
                  <td><strong style="color: var(--light-text);"><%= screeningEnd.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %></strong></td>
                  <td><%= screening.movie.duration %> mins</td>
                  <td>
                    <div class="table-actions">
                      <a href="/admin/screenings/<%= screening._id %>" class="btn btn-sm btn-primary">View</a>
                      <% if (!isPast) { %>
                        <a href="/admin/screenings/<%= screening._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                      <% } %>
                      <form action="/admin/screenings/<%= screening._id %>/delete" method="POST" style="display: inline;" onsubmit="return confirmDelete('Are you sure you want to delete this screening? This action cannot be undone.');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
