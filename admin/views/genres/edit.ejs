<%- include('../partials/header', { title: 'Edit Genre' }) %>

<div class="container" id="main-content">
  <%- include('../partials/breadcrumb', { items: [{ label: 'Dashboard', href: '/dashboard' }, { label: 'Genres', href: '/admin/genres' }, { label: 'Edit ' + genre.name }] }) %>
  <div class="page-header">
    <div>
      <h1>Edit Genre</h1>
      <p style="color: var(--light-text); font-size: 1rem; margin-top: 0.5rem;">Update genre name</p>
    </div>
    <a href="/admin/genres" class="btn btn-secondary">‚Üê Back to Genres</a>
  </div>

  <div class="card">
    <div class="card-body">
      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <form action="/admin/genres/<%= genre._id %>" method="POST">
        <div class="form-group">
          <label for="name">Genre Name *</label>
          <input type="text" id="name" name="name" class="form-control" value="<%= genre.name %>" required autofocus>
        </div>
        <small class="text-muted">Movies using this genre will be updated automatically.</small>
        <div class="btn-group" style="margin-top: 1rem;">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <a href="/admin/genres" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
